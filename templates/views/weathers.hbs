<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    <!-- header section  -->

    {{>navbar}}

    <!-- body section -->

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 max-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Monday</p>
                        <p id="today_date">1st JAN</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">OUTPUT</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span>0</span> <sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa-solid fa-cloud"></i></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- footer section -->

   {{>footer}}

   <script src="js/main.js"></script>
   
</body>
</html>